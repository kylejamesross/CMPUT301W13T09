<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewRecipeTitle"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:background="#323331"
    android:gravity="center_vertical"
    android:paddingLeft="5dip" >

    <ImageView
        android:id="@+id/addNewRecipeTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:contentDescription="TeamLOGO" />

    <TextView
        android:id="@+id/addNewRecipeTitletitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/addNewRecipeTitleHeader"
        android:paddingRight="5dip"
        android:text="@string/title_activity_create_new_recipe_view"
        android:textSize="11sp" />

    <Button
        android:id="@+id/addNewRecipeDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/CreateRecipeViewSubmit" />

</RelativeLayout>