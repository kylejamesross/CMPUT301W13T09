<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10">

        <requestFocus />
    </MultiAutoCompleteTextView>

    <Button
        android:id="@+id/addNewRecipeInstructionDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/multiAutoCompleteTextView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:text="@string/cancelButton" />

    <Button
        android:id="@+id/addNewRecipeInstructionDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addNewRecipeInstructionDialogCancel"
        android:layout_alignBottom="@+id/addNewRecipeInstructionDialogCancel"
        android:layout_alignRight="@+id/multiAutoCompleteTextView1"
        android:text="@string/addNewIngredientButtonString" />

</RelativeLayout>