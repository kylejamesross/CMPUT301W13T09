<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <MultiAutoCompleteTextView
        android:id="@+id/addNewRecipeInstructionDialogEditText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_margin="5dp"
        android:layout_above="@+id/addNewRecipeInstructionDialogDelete"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </MultiAutoCompleteTextView>

    <Button
        android:id="@+id/addNewRecipeInstructionDialogDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/buttonDelete" />

    <Button
        android:id="@+id/addNewRecipeInstructionDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addNewRecipeInstructionDialogDelete"
        android:text="@string/cancelButton" />

    <Button
        android:id="@+id/addNewRecipeInstructionDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addNewRecipeInstructionDialogCancel"
        android:text="@string/addNewInstructionButtonString" />

</RelativeLayout>