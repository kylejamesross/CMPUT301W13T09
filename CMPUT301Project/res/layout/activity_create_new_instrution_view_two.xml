<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/R.layout.activity_create_new_instruction_view_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <MultiAutoCompleteTextView
        android:id="@+id/addNewRecipeInstructionDialogTwoEditText"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/addNewRecipeInstructionDialogRight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine|textCapSentences" >

    </MultiAutoCompleteTextView>

    <Button
        android:id="@+id/addNewRecipeInstructionDialogRight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addNewRecipeInstructionDialogLeft"
        android:layout_alignBottom="@+id/addNewRecipeInstructionDialogLeft"
        android:layout_toRightOf="@+id/addNewRecipeInstructionDialogLeft" />

    <Button
        android:id="@+id/addNewRecipeInstructionDialogLeft"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addNewRecipeInstructionDialogTwoEditText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp" />

</RelativeLayout>