<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainMenuView" >

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/search_text"
        android:textColor="@color/textColour" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/inPantrySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchEditText"
        android:layout_below="@+id/searchEditText"
        android:layout_marginTop="21dp"
        android:text="@string/in_pantry_search_check"
        android:textColor="@color/textColour" />

    <CheckBox
        android:id="@+id/localSearchOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inPantrySearch"
        android:layout_below="@+id/inPantrySearch"
        android:layout_marginTop="16dp"
        android:text="@string/local_search_text"
        android:textColor="@color/textColour" />

    <Button
        android:id="@+id/myPantry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myRecipes"
        android:layout_centerHorizontal="true"
        android:text="@string/pantry" />

    <Button
        android:id="@+id/myRecipes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myPantry"
        android:layout_below="@+id/localSearchOnly"
        android:layout_marginTop="65dp"
        android:text="@string/recipes" />

</RelativeLayout>